@model lab11_12.Models.TTenhim

@{
    ViewData["Title"] = "Create";
}

<h1>Create Tenhim</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Mergejil сонгох</label>
                <table>
                    <tr>
                        @{
                            int count = 0;
                            List<CheckMergejil> mergejils = ViewBag.CheckMergejil;

                            foreach (var mergejil in mergejils)
                            {
                                if (count++ % 3 == 0)
                                {
                                    @:</tr><tr>
                                }
                                @:<td>
                                <input type="checkbox"
                                       name="seletedMergejil"
                                       value="@mergejil.mcode"
                                       @(Html.Raw(mergejil.isChecked ? "checked=\"checked\"" : "")) />
                                @: @mergejil.mname
                                @:</td>
                            }
                        }
                    </tr>
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
